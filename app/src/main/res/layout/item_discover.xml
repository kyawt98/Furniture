<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_card"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="@dimen/dimen_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/img_discover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/chair2"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_discover_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chairs"
        app:layout_constraintTop_toBottomOf="@id/img_card"
        app:layout_constraintLeft_toLeftOf="@id/img_card"/>

    <TextView
        android:id="@+id/count_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1126"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txt_discover_name"/>

    <TextView
        android:id="@+id/txt_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="items"
        android:layout_margin="@dimen/dimen_4"
        tools:ignore="MissingConstraints"
        app:layout_constraintBaseline_toBaselineOf="@id/count_discover"
        app:layout_constraintLeft_toRightOf="@id/count_discover"/>



</androidx.constraintlayout.widget.ConstraintLayout>